FROM node:20-alpine

WORKDIR /app

# Copy package files first for better caching
COPY package*. json ./
RUN npm ci --only=production

# Copy application code
COPY . .

# Run as non-root user for security
RUN addgroup -g 1001 -S nodejs && \
    adduser -S nodejs -u 1001
USER nodejs

EXPOSE 3000

CMD ["node", "server.js"]